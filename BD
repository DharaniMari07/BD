  <canvas id="floatingCanvas"></canvas>

  <script>
    const letterText = `Dear idiot,

I know sometimes life can be tough, and you might feel like you're alone, but remember — you are never alone.

You bring light to those around you, especially me well i dont need to explain since ur name itself describes it lol. I’m so lucky to have a friend like you.

May this birthday bring you all the happiness you deserve and more.

Stay amazing.

— Your forever idiot friend 💖`;

    const typedLetter = document.getElementById('typedLetter');
    const surpriseMessage = document.getElementById('surpriseMessage');
    const memoryLane = document.getElementById('memoryLane');
    const spinSection = document.getElementById('spinSection');
    const mindReader = document.getElementById('mindReader');
    const Notes = document.getElementById('Notes');
    const openGift = document.getElementById('openGift');
    const giftMessage = document.getElementById('giftMessage');

    function typeWriter(text, i, callback) {
      if (i < text.length) {
        typedLetter.innerHTML += text.charAt(i);
        i++;
        setTimeout(() => typeWriter(text, i, callback), 50);
      } else if (callback) {
        callback();
      }
    }

    function revealSurprise() {
      const surpriseBtn = document.querySelector('.surprise-btn');
      surpriseBtn.style.display = 'none';
      surpriseMessage.classList.remove('hidden');
      typeWriter(letterText, 0, () => {
        memoryLane.classList.remove('hidden');
        spinSection.classList.remove('hidden');
        mindReader.classList.remove('hidden');
        Notes.classList.remove('hidden');
      });
    }

    openGift.addEventListener('click', () => {
      openGift.style.display = 'none';
      giftMessage.classList.remove('hidden');
    });

    const compliments = [
      "You're insanely kind!",
      "Your smile is infectious.",
      "You light up every room.",
      "You make the world better.",
      "Your laugh is the best sound(like a bandar hehe).",
      "You're an amazing friend."
    ];

    function spinWheel() {
      const result = compliments[Math.floor(Math.random() * compliments.length)];
      document.getElementById('wheelResult').textContent = result;
    }

    // Floating heart animation on canvas
    const canvas = document.getElementById('floatingCanvas');
    const ctx = canvas.getContext('2d');
    let width, height;
    let hearts = [];

    function resize() {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width;
      canvas.height = height;
    }
    window.addEventListener('resize', resize);
    resize();

    class Heart {
      constructor() {
        this.x = Math.random() * width;
        this.y = height + 20;
        this.size = 10 + Math.random() * 20;
        this.speed = 1 + Math.random() * 3;
        this.opacity = 0.5 + Math.random() * 0.5;
        this.angle = Math.random() * 2 * Math.PI;
        this.spin = 0.02 + Math.random() * 0.03;
      }
      draw() {
        ctx.save();
        ctx.translate(this.x, this.y);
        ctx.rotate(this.angle);
        ctx.beginPath();
        ctx.moveTo(0, 0);
        ctx.bezierCurveTo(this.size/2, -this.size/2, this.size, this.size/3, 0, this.size);
        ctx.bezierCurveTo(-this.size, this.size/3, -this.size/2, -this.size/2, 0, 0);
        ctx.fillStyle = `rgba(255,105,180,${this.opacity})`;
        ctx.fill();
        ctx.restore();
      }
      update() {
        this.y -= this.speed;
        this.angle += this.spin;
        if(this.y < -this.size) {
          this.x = Math.random() * width;
          this.y = height + 20;
          this.size = 10 + Math.random() * 20;
          this.speed = 1 + Math.random() * 3;
          this.opacity = 0.5 + Math.random() * 0.5;
        }
      }
    }

    for(let i = 0; i < 30; i++) {
      hearts.push(new Heart());
    }

    function animate() {
      ctx.clearRect(0, 0, width, height);
      hearts.forEach(heart => {
        heart.update();
        heart.draw();
      });
      requestAnimationFrame(animate);
    }
    animate();
  </script>
